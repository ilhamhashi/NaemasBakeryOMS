<UserControl x:Class="OrderManagerDesktopUI.Views.DashBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderManagerDesktopUI.Views" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource whiteBorder}" Margin="15 0 7 7">
                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                          Style="{DynamicResource DataGridStyle1}"
                          ItemsSource="{Binding UpcomingOrders, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedOrder, UpdateSourceTrigger=PropertyChanged}"
                          VerticalAlignment="Stretch">      
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order" IsReadOnly="True" CanUserResize="False" Width="auto" 
                        Binding="{Binding OrderId, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Date" IsReadOnly="True" Width="auto"
                        Binding="{Binding OrderDate, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Customer" IsReadOnly="True" Width="auto"
                        Binding="{Binding CustomerFullName, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="PickUp" IsReadOnly="True" Width="auto"
                        Binding="{Binding PickUp.Date, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Status" IsReadOnly="True" Width="auto"
                        Binding="{Binding Status, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            
            <Border Grid.Column="1" Style="{StaticResource whiteBorder}" Margin="7 0 0 7">
                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
              CellStyle="{DynamicResource DataGridCellStyle1}" 
              Style="{DynamicResource DataGridStyle1}"
              ItemsSource="{Binding PendingPaymentOrders, UpdateSourceTrigger=PropertyChanged}"
              SelectedItem="{Binding SelectedOrder, UpdateSourceTrigger=PropertyChanged}"
              VerticalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order" IsReadOnly="True" CanUserResize="False" Width="auto" 
            Binding="{Binding OrderId, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Customer" IsReadOnly="True" Width="auto"
            Binding="{Binding CustomerFullName, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Amount" IsReadOnly="True" Width="auto"
            Binding="{Binding OrderDate, UpdateSourceTrigger=PropertyChanged}"/>

                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Style="{StaticResource whiteBorder}" Margin="15 0 7 0">
                <StackPanel>
                    <TextBlock Text="{Binding WeeklyRevenue, UpdateSourceTrigger=PropertyChanged}" FontSize="30" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="$100,00        this week" TextWrapping="Wrap" FontSize="25" TextAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Style="{StaticResource whiteBorder}" Margin="7 0 7 0">
                <StackPanel>
                    <TextBlock Text="{Binding MonthlyRevenue, UpdateSourceTrigger=PropertyChanged}" FontSize="30" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="$100,00         this month" TextWrapping="Wrap" FontSize="25" TextAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" Style="{StaticResource whiteBorder}" Margin="7 0 7 0">
                <StackPanel>
                    <TextBlock Text="{Binding MostPopularProduct, UpdateSourceTrigger=PropertyChanged}" FontSize="30" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="'Cake'          most popular" TextWrapping="Wrap" FontSize="25" TextAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>            </Border>
            <Border Grid.Column="3" Style="{StaticResource whiteBorder}" Margin="7 0 0 0">
                <StackPanel>
                    <TextBlock Text="{Binding MonthlyOrdersCount, UpdateSourceTrigger=PropertyChanged}" FontSize="30" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="100 orders      this month" TextWrapping="Wrap" FontSize="25" TextAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
