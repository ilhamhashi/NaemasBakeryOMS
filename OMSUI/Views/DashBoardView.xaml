<UserControl x:Class="OrderManagerDesktopUI.Views.DashBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderManagerDesktopUI.Views" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource whiteBorder}" Margin="15 0 7 7">
                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                          Style="{DynamicResource DataGridStyle1}"
                          ItemsSource="{Binding UpcomingOrders, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedOrder, UpdateSourceTrigger=PropertyChanged}"
                          VerticalAlignment="Stretch">      
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order" IsReadOnly="True" CanUserResize="False" Width="auto" 
                        Binding="{Binding Id, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Date" IsReadOnly="True" Width="auto"
                        Binding="{Binding Date, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Customer" IsReadOnly="True" Width="auto"
                        Binding="{Binding Customer.FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="PickUp" IsReadOnly="True" Width="auto"
                        Binding="{Binding PickUp.Date, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Status" IsReadOnly="True" Width="auto"
                        Binding="{Binding Status, UpdateSourceTrigger=PropertyChanged}"/>
                        
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            
            <Border Grid.Column="1" Style="{StaticResource whiteBorder}" Margin="7 0 0 7">
                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
              CellStyle="{DynamicResource DataGridCellStyle1}" 
              Style="{DynamicResource DataGridStyle1}"
              ItemsSource="{Binding PendingPaymentOrders, UpdateSourceTrigger=PropertyChanged}"
              SelectedItem="{Binding SelectedOrder, UpdateSourceTrigger=PropertyChanged}"
              VerticalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order" IsReadOnly="True" CanUserResize="False" Width="auto" 
            Binding="{Binding Id, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Customer" IsReadOnly="True" Width="*"
            Binding="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Amount" IsReadOnly="True" Width="*"
            Binding="{Binding Date, UpdateSourceTrigger=PropertyChanged}"/>

                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" 
                    CornerRadius="7" Margin="15 7 7 0">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#cae3db" Offset="0"/>
                        <GradientStop Color="#e0f5ee" Offset="0.8"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding WeeklyRevenue, StringFormat={}{0:C0}, UpdateSourceTrigger=PropertyChanged}" FontSize="30" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="this week" TextWrapping="Wrap" FontSize="25" TextAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" 
                    Style="{StaticResource whiteBorder}" Margin="7 7 7 0"
                    Background="#e0f5ee">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding MonthlyRevenue, StringFormat={}{0:C0}, UpdateSourceTrigger=PropertyChanged}" FontSize="30" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="this month" TextWrapping="Wrap" FontSize="25" TextAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" 
                    Style="{StaticResource whiteBorder}" Margin="7 7 7 0"
                    Background="#e0f5ee">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding MostPopularProduct, UpdateSourceTrigger=PropertyChanged}" FontSize="30" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="most popular" TextWrapping="Wrap" FontSize="25" TextAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>            </Border>
            <Border Grid.Column="3" 
                    Style="{StaticResource whiteBorder}" Margin="7 7 0 0"
                    Background="#e0f5ee">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding MonthlyOrdersCount, UpdateSourceTrigger=PropertyChanged}" FontSize="30" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="this month" TextWrapping="Wrap" FontSize="25" TextAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
