<UserControl x:Class="OrderManagerDesktopUI.Views.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderManagerDesktopUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- VENSTRE: LISTE + FILTER -->
        <Border Grid.Column="0"
                Style="{StaticResource whiteBorder}"
                Background="#d1f0e5"
                Margin="0 0 20 0">
            <StackPanel Margin="10">

                <!-- Filter -->
                <TextBlock Text="Filter by name:" 
                           FontSize="16" 
                           Margin="0 0 0 5"/>
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                         Width="200"
                         Margin="0 0 0 10"/>

                <!-- Liste med produkter -->
                <ListBox ItemsSource="{Binding ProductsView}"
                         SelectedItem="{Binding SelectedProduct}"
                         DisplayMemberPath="Name"
                        
                         Margin="0 10 0 0"/>
            </StackPanel>
        </Border>

        <!-- HØJRE: CREATE + EDIT -->
        <Border Grid.Column="1"
                Style="{StaticResource whiteBorder}"
                Background="#d1f0e5"
                Margin="0">
            <StackPanel Margin="10">

                <!-- CREATE PRODUCT -->
                <TextBlock Text="Create Product" 
                           FontSize="20" 
                           Margin="0 0 0 10"/>

                <TextBlock Text="Name"/>
                <TextBox Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0 0 0 5"/>

                <TextBlock Text="Description"/>
                <TextBox Text="{Binding NewDescription, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0 0 0 5"/>

                <TextBlock Text="Price"/>
                <TextBox Text="{Binding NewPrice, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0 0 0 10"/>

                <Button Content="Create"
                        Style="{StaticResource addButton}"
                        Command="{Binding CreateCommand}"
                        Margin="0 0 0 10"/>

                <Separator Margin="0 10"/>

                <!-- EDIT PRODUCT -->
                <TextBlock Text="Edit Selected Product" 
                           FontSize="20" 
                           Margin="0 0 0 10"/>

                <TextBlock Text="Name"/>
                <TextBox Text="{Binding SelectedProduct.Name, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0 0 0 5"/>

                <TextBlock Text="Description"/>
                <TextBox Text="{Binding SelectedProduct.Description, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0 0 0 5"/>

                <TextBlock Text="Price"/>
                <TextBox Text="{Binding SelectedProduct.Price, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0 0 0 10"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0 10 0 0">
                    <Button Content="Update"
                            Width="100"
                            Margin="5"
                            Style="{StaticResource addButton}"
                            Command="{Binding UpdateCommand}"/>

                    <Button Content="Delete"
                            Width="100"
                            Margin="5"
                            Style="{StaticResource addButton}"
                            Command="{Binding DeleteCommand}"/>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</UserControl>
